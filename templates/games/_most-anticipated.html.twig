<div class="most-anticipated w-full lg:w-1/4 mt-12 lg:mt-0">
    <h2>Most Anticipated</h2>
    <div class="most-anticipated-container space-y-10 mt-8 mb-12">
        {% for game in mostAnticipatedGames %}
            <div class="most-anticipated-game flex">
            <a href="#">
                <img src="{{ game['cover']['url']|replace({ 'thumb' : 'cover_small' }) }}" alt="{{ game['name'] }} cover" class="w-16 hover:opacity-75 transition ease-in-out duration-150">
            </a>
            <div class="ml-4">
                <a href="#" class="hover:text-gray-300">{{ game['name'] }}</a>
                <p class="text-gray-400 text-sm mt-1">{{ game['first_release_date']|date('M d, Y') }}</p>
            </div>
        </div>
        {% endfor %}
    </div>

    <h2>Coming Soon</h2>
    <div class="coming-soon-container space-y-10 mt-8">
        {% for game in comingSoonGames %}
            <div class="coming-soon-game flex">
                <a href="#">
                    <img src="{{ game['cover']['url']|replace({ 'thumb' : 'cover_big' }) }}" alt="{{ game['name'] }} cover" class="w-16 hover:opacity-75 transition ease-in-out duration-150">
                </a>
                <div class="ml-4">
                    <a href="#" class="hover:text-gray-300">{{ game['name'] }}</a>
                    <p class="text-gray-400 text-sm mt-1">{{ game['first_release_date']|date('M d, Y') }}</p>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

